{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Base Test",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/source/index.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "args": [
                "-c",
                "./tests/demo",
                "-o",
                "./output",
                "-r",
                "--generate-ir"
            ],
            "env": {
                "TYPE_V_PATH": "/Users/praisethemoon/praisethemoon/type-c/type-v/cmake-build-debug"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "program": "${workspaceFolder}/source/index.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "args": [
                "--run-tests"
            ]
        }
    ]
}